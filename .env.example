ADMIN_PASSWORD=admin

# Internal service ports
API_PORT=3000
USERS_PORT=3001
TOURNAMENTS_PORT=3002
FRONTEND_PORT=3003
PROXY_PORT=3004
BLOCKCHAIN_PORT=3005

# External application port
APP_PORT=443

VITE_ENABLE_DEV_PAGES=false
REPORT_GUEST_AS_ZERO=true

# Password for the 'elastic' user and 'kibana_system' user
# (at least 6 characters)
ELASTIC_PASSWORD=changeme
KIBANA_PASSWORD=changeme

# Version of Elastic products
STACK_VERSION=8.7.1
CLUSTER_NAME=transcendence-cluster

# Set to 'basic' or 'trial' to automatically start the 30-day trial
#LICENSE=basic
LICENSE=trial

# External elk stack ports
ES_PORT=9200
KIBANA_PORT=5601

# Memory limits for elk stack services (in bytes)
ES_MEM_LIMIT=1073741824
KB_MEM_LIMIT=1073741824
LS_MEM_LIMIT=1073741824

# Secrets
JWT_SECRET={generated-by-makefile}
INTERNAL_API_KEY={generated-by-makefile}
ENCRYPTION_KEY={generated-by-makefile}

VITE_ENABLE_DEV_PAGES=true
BLOCKCHAIN_REPORT_ENABLED=true
INTERNAL_DEV_SKIP_TLS_VERIFY=true
# Real-chain toggle (do not enable until RPC/keys are configured)
BLOCKCHAIN_ENABLED=true
# Name of the target network when enabled (e.g., fuji)
BLOCKCHAIN_NETWORK=fuji
# Public deployed registry address (safe to expose)
REGISTRY_ADDRESS=0xB4c44FdBbD9D4326D7e967bE4Ac678c92d8fcEFe
# Fuji deployment
RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
PRIVATE_KEY=
# Reporter tuning (optional)
# Default: 2000ms timeout, 2 retries, 150ms base backoff
BLOCKCHAIN_REPORT_TIMEOUT_MS=2000
BLOCKCHAIN_REPORT_RETRIES=2
BLOCKCHAIN_REPORT_BACKOFF_MS=150
